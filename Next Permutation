class Solution {
public:
    
    void nextPermutation(vector<int>& nums) {
        
        int i;                         /* find a value which have to change like we have 1 2 3 then the next will be 1 3 2 so....it can be done like this.....
                                              traverse the array from back and wherever you find a[i]<a[i+1] then just break the loop and we find that our i is pointing to that element which we have to change */
        for(i = nums.size()-2; i>=0; i--){
            if(nums[i]<nums[i+1])
                break;
        }
        
        if(i == -1){                                         /* when we dont find such elemnet from above loop */
            sort(nums.begin(), nums.end());
        }
        
        else{
                                                              /* finding another element which we have to swap with */
            int j;
            for(j=nums.size()-1; j>i; j--){
                if(nums[i]<nums[j]){
                    break;
                }
            }
            swap(nums[i],nums[j]);
            sort(nums.begin()+i+1 , nums.end());
        }
        
  
    }
};
